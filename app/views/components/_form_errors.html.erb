<div class=" w-full lg:w-fit mx-auto mt-4">
 <% if form.object.errors.any? %>

        <div class="flex flex-col gap-2 justify-center">
            <% form.object.errors.full_messages.each do |message| %>
                <p class="bg-white text-center text-red-500 shadow-lg border border-blue-300 py-1 rounded-lg w-full px-8"><%= message %></p>
            <% end %>
        </div>
    <% end %> </div>