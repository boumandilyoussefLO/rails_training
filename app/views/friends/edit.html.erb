<h1> Edit Friend </h1>

<%= form_with model: @friend, url:edit_friend_path  ,class:"flex  flex-col items-center gap-2" do |form| %>
<div class="w-1/3 items-center flex justify-between">
<%= form.label :first_name,"first name" , class:"" %>
<%= form.text_field :first_name ,class:"" %></div>
<div class="w-1/3 items-center flex justify-between">
<%= form.label :last_name,"last_name" %>
<%= form.text_field :last_name ,class:"" %></div>
<div class="w-1/3 items-center flex justify-between">
<%= form.label :email,"email" %>
<%= form.text_field :email ,class:"" %></div>
<div class="w-1/3 items-center flex justify-between">
<%= form.label :phone,"phone" %>
<%= form.text_field :phone ,class:"" %></div>

<%= form.submit "update friend +", class:"bg-green-300 text-white font-bold px-4 rounded-lg py-1 capitalize text-xs" %>

<%end%>